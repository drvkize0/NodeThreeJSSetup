{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2020",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "jsx": "react-jsx"
    },
    "include": ["./src/**/*"]
}